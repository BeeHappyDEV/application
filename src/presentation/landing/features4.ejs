<% const content = {
    subtitle: "Acelera tu éxito",
    title: "Reducción de costos y valoración del cliente",
    image: "features4",
    paragraphs: [
        {
            description: "<span class=\"content-topic\">Ahorra dinero:</span> nuestro chatbot puede gestionar las consultas de tus clientes de forma automatizada, ¡así que tus agentes humanos pueden centrarse en otras cosas!"
        },
        {
            description: "<span class=\"content-topic\">Satisface a tus clientes:</span> con una disponibilidad 24/7, tus clientes pueden obtener ayuda cuando la necesitan de forma rápida y precisa; proporcionándoles una experiencia de atención personalizada, ¡lo que hace que tus clientes se sientan valorados!"
        }
    ],
    buttons: [
        {
            title: "Contáctanos",
            link: "#contacto"
        }
    ]
} %>

<section class="w-screen background-section-1 pb-24 pt-24" id="beneficios">
    <div class="flex flex-wrap items-center 2xl:w-[1450px] xl:w-[1300px] w-11/12 mx-auto px-12">
        <div class="w-full px-4 text-center">
            <span class="content-subtitle">
                <%= content.subtitle %>
            </span>
            <h2 class="mt-6 mb-8 text-4xl lg:text-5xl content-title">
                <span class="w-full lg:w-1/2 md:w-3/4 block mx-auto">
                    <%= content.title %>
                </span>
            </h2>
        </div>
    </div>
    <div class="flex flex-wrap items-center 2xl:w-[1450px] xl:w-[1300px] w-11/12 mx-auto px-12">
        <div class="w-full lg:w-1/2 px-4">
            <% content.paragraphs.forEach((paragraph) => { %>
                <p class="mb-10 content-text leading-loose">
                    <%- paragraph.description %>
                </p>
            <% }) %>
            <ul class="flex justify-center mb-10 mt-10">
                <% content.buttons.forEach ((button) => { %>
                    <a href="<%= button.link %>">
                        <div class="w-[210px] h-12 button-colored">
                            <%= button.title %>
                        </div>
                    </a>
                <% }) %>
            </ul>
        </div>
        <div class="w-full lg:w-1/2 md:w-3/4 mx-auto lg:px-4 lg:order-first">
            <div class="rounded lg:px-4 pt-4">
                <%- include ('../components/images', {selection: content.image}) %>
            </div>
        </div>
    </div>
</section>


