<% const content = Object.assign ({
    title: "Síguenos en nuestras redes sociales para estar al día con todas nuestras novedades.",
    image: "logotype",
    link: txt_path,
    blocks: [
        {
            blocks: [
                {
                    image: "social1",
                    link: txt_path + "/social/facebook"
                },
                {
                    image: "social2",
                    link: txt_path + "/social/instagram"
                },
                {
                    image: "social3",
                    link: txt_path + "/social/x"
                },
                {
                    image: "social4",
                    link: txt_path + "/social/linkedin"
                }
            ]
        },
        {
            blocks: [
                {
                    title: "Más Información",
                    blocks: [
                        {
                            title: "Política de Privacidad",
                            link: txt_path + "/politica-de-privacidad"
                        },
                        {
                            title: "Términos y Condiciones",
                            link: txt_path + "/terminos-y-condiciones"
                        }
                    ]
                }
            ]
        }
    ]
}) %>

<section class="w-screen bg-customDarkBg1 pt-24">
    <div class="container mx-auto px-4 w-4/5 md:w-11/12 lg:w-10/12 xl:w-4/5 2xl:w-2/3">
        <div class="flex flex-wrap">
            <div class="w-full lg:w-1/2 mb-16 lg:mb-0 order-last lg:order-first">
                <div class="flex justify-center lg:justify-start items-center grow basis-0">
                    <%- include ('./images', {selection: content.image}) %>
                </div>
                <p class="mb-10 mt-4 sm:w-[22rem] lg:w-[20rem] xl:w-[24rem] text-gray-400 leading-loose text-center lg:text-left mx-auto lg:mx-0">
                    <%= content.title %>
                </p>
                <div class="flex justify-center lg:justify-start items-center mx-auto lg:mx-0">
                    <% content.blocks [0].blocks.forEach ((block) => { %>
                        <a class="inline-block mr-2 bg-customDarkBg2 custom-border-gray hover:bg-customDarkBg3 rounded-xl" href="<%= block.link %>">
                            <%- include ('./images', {selection: block.image}) %>
                        </a>
                    <% }) %>
                </div>
            </div>
            <div class="w-full lg:w-1/2 flex flex-end">
                <% content.blocks [1].blocks.forEach ((block) => { %>
                    <div class="w-full md:w-1/3 lg:w-auto mb-16 md:mb-0">
                        <h3 class="text-2xl font-bold text-white">
                            <%= block.title %>
                        </h3>
                        <ul class="mt-6 text-white">
                            <% block.blocks.forEach((block2) => { %>
                                <li class="mb-4 flex">
                                    <%- include ('../components/chevron') %>
                                    <a class="text-customQuaternaryYellow" href="<%= block2.link %>">
                                        <%= block2.title %>
                                    </a>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                <% }) %>
            </div>
        </div>
        <p class="lg:text-center text-sm text-gray-400 border-t border-customGrayBorder py-8 mt-16 hidden lg:block">
            Derechos reservados &copy; <%= new Date ().getFullYear () %> <a class="font-bold text-customPrimaryYellow" href="<%= content.link %>"><%= txt_website %></a>
        </p>
    </div>
</section>